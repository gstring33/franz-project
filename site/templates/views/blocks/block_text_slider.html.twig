{% for content in block %}
    <section class="g-py-100" {% if content.scroll_target %}id="scroll_target"{% endif %}>
        <div class="container">
            <div class="row">
                <!-- Carousel -->
                <div class="col-lg-6 g-mb-50 g-mb-0--lg">
                    <div id="carouselCus1" class="js-carousel text-center g-mb-20"
                         data-infinite="true"
                         data-lazy-load="progressive"
                         data-arrows-classes="u-arrow-v1 g-absolute-centered--y g-width-50 g-height-50 g-font-size-20 g-bg-white g-color-gray-dark-v5 g-color-primary--hover g-mt-minus-10"
                         data-arrow-left-classes="fa fa-angle-left g-left-0 rounded-right"
                         data-arrow-right-classes="fa fa-angle-right g-right-0 rounded-left"
                         data-nav-for="#carouselCus2">
                        {% for img in content.images %}
                            <div class="js-slide">
                                <a class="js-fancybox d-block g-pos-rel" data-rel="lightbox-gallery--08-1"
                                   href="{{ img.url }}" title="Lightbox Gallery"
                                   data-open-effect="bounceInDown"
                                   data-close-effect="bounceOutDown"
                                   data-open-speed="1000"
                                   data-close-speed="1000"
                                   data-blur-bg="true">
                                    <img class="img-fluid w-100 rounded" data-lazy="{{ img.url }}" alt="Image description">
                                </a>
                            </div>
                        {% endfor %}
                    </div>

                    <div id="carouselCus2" class="js-carousel text-center u-carousel-v3 g-mx-minus-10" data-infinite="true"
                         data-center-mode="true" data-lazy-load="progressive" data-slides-show="4" data-is-thumbs="true"
                         data-nav-for="#carouselCus1">
                        {% for img in content.images %}
                            <div class="js-slide g-px-10">
                                <img class="img-fluid g-cursor-pointer rounded" data-lazy="{{ img.url }}" alt="Image description">
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <!-- End Carousel -->

                <!-- Section Content -->
                <div class="col-lg-6 align-self-center g-pl-30--lg">
                    <header class="g-mb-30">
                        <div class="u-heading-v2-3--bottom g-brd-primary g-mb-30">
                            <h2 class="h4 u-heading-v2__title g-color-gray-dark-v2 g-font-weight-600 text-uppercase">{{ content.title }}</h2>
                        </div>
                        <div class="g-font-size-18">{{ content.text | raw }}</div>
                    </header>

                    <a class="btn btn-xl u-btn-salmon text-uppercase g-font-weight-600 g-font-size-12 rounded g-mr-15 g-mb-10 g-mb-0--sm"
                       href="#">Check It Now</a>
                </div>
                <!-- End Section Content -->
            </div>
    </div>
    </section>
{% endfor %}