<article class="text-center g-bg-gray-light-v5 g-overflow-hidden">
    <!-- Article Header -->
    <header class="u-custom-bg-{% if workshop.price %}primary{% else %}primary-light{% endif %} g-pos-rel g-px-20 g-py-50">
        <svg class="g-pos-abs g-bottom-0 g-left-0 g-right-0" version="1.1" preserveAspectRatio="none"
             xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="100%" height="70px"
             viewBox="0 0 300 70">
            <path d="M30.913,43.944c0,0,42.911-34.464,87.51-14.191c77.31,35.14,113.304-1.952,146.638-4.729 c48.654-4.056,69.94,16.218,69.94,16.218v54.396H30.913V43.944z"
                  opacity="0.6" fill="#f7f7f7"></path>
            <path d="M-35.667,44.628c0,0,42.91-34.463,87.51-14.191c77.31,35.141,113.304-1.952,146.639-4.729 c48.653-4.055,69.939,16.218,69.939,16.218v54.396H-35.667V44.628z"
                  opacity="0.6" fill="#f7f7f7"></path>
            <path d="M43.415,98.342c0,0,48.283-68.927,109.133-68.927c65.886,0,97.983,67.914,97.983,67.914v3.716 H42.401L43.415,98.342z"
                  opacity="0.7" fill="#f7f7f7"></path>
            <path d="M-34.667,62.998c0,0,56-45.667,120.316-27.839C167.484,57.842,197,41.332,232.286,30.428 c53.07-16.399,104.047,36.903,104.047,36.903l1.333,36.667l-372-2.954L-34.667,62.998z"
                  fill="#f7f7f7"></path>
        </svg>
        <strong class="d-block g-color-white g-font-size-50 g-line-height-0_7 g-mb-20">
            {% if workshop.price %}
                <span class="g-valign-top g-font-size-default">EUR</span>
                {{ workshop.price }}
                <span class="g-font-size-default">/ pers</span>
            {% else %}
                Frei
            {% endif %}
        </strong>
        <h3 class="h6 text-uppercase g-color-white-opacity-0_7 g-letter-spacing-3 g-mb-20">{{ workshop.title }}</h3>
    </header>
    <!-- End Article Header -->

    <!-- Article Content -->
    <div class="g-px-20 g-pt-20 g-pb-40">
        <ul class="list-unstyled g-mb-40">
            <li class="g-mb-20">
                <h4>Schwierigkeit</h4>
                <span class="js-rating d-block g-color-secondary" data-rating="{{ workshop.difficulty }}">
                                        </span>
            </li>
            <li class="g-mb-20">
                <h4>NÃ¤chster Termin</h4>
                <span class="g-font-size-18">
                    {% if workshop.is_date_set %}
                        {{ workshop.date }}
                    {% else %}
                        Auf Anfrage
                    {% endif %}
                </span>
            </li>
            <li class="g-mb-20">
                <h4>Dauer</h4>
                <span class="g-font-size-18">{{ workshop.duration_value }} {% for type in workshop.duration_type %}{{ type.title }}{% endfor %}</span>
            </li>
            <li class="g-mb-20">
                <h4>Max. Teilnehmer</h4>
                <span class="g-font-size-18">{{ workshop.max_members }}</span>
            </li>
            <li class="g-mb-20">
                <h4>Ort</h4>
                <span class="g-font-size-18">Reckenfeld</span>
            </li>
        </ul>
        {#<a class="btn text-uppercase u-btn-{% if workshop.price %}primary{% else %}salmon{% endif %} g-font-size-12 g-font-weight-700 g-pa-15-30 g-mb-10" href="#">
            Jetzt reservieren
        </a>#}
    </div>
    <!-- End Article Content -->
</article>
